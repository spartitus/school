{{ form_start(form) }}
<div class="m-3">
    <div class="row">
        <div class="col-md-6">{{ form_row (form.firstname) }}</div>
        <div class="col-md-6">{{ form_row (form.lastname) }}</div>
    </div>
    <div class="row">
        <div class="col-md-6">{{ form_row (form.mail) }}</div>
    </div>
    <div class="row">
        <div class="col-md-6">{{ form_row (form.message) }}</div>
    </div>
</div>
{{ form_widget(form) }}
<button class="btn btn-outline-dark mb-3 ml-3">{{ button_label|default('Send') }}</button>
{{ form_end(form) }}

{{ form_start(form) }}
