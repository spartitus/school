{% extends 'layout.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <h1>Contact</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contact.id }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ contact.mail }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ contact.lastname }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ contact.firstname }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ contact.message }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ contact.createdAt ? contact.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <button class="btn btn-outline-dark mb-3 ml-3"><a href="{{ path('contact_index') }}">back to list</a></button>
    <button class="btn btn-outline-dark mb-3 ml-3"><a href="{{ path('contact_edit', {'id': contact.id}) }}">edit</a></button>
    {{ include('contact/_delete_form.html.twig') }}
{% endblock %}
