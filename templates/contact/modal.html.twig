<div class="modal fade" id="modal-answer{{ contact.id }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">{{ contact.message }}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="/contact/{{ contact.id }}/edit" method="post">
                    <input type="hidden" name="id" value="{{ contact.id }}">
                    <textarea style="min-width: 100%;" name="answer"></textarea>
                    <p><button type="submit" class="btn btn-outline-dark mb-3 ml-3">Send</button></p>
                </form>
            </div>
        </div>
    </div>
</div>