{% extends 'layout.html.twig' %}

{% block title %}Pricing index{% endblock %}

{% block body %}
    <h1>Pricing index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Adult</th>
                <th>Child</th>
                <th>School</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pricing in pricings %}
            <tr>
                <td>{{ pricing.id }}</td>
                <td>{{ pricing.adult }}</td>
                <td>{{ pricing.child }}</td>
                <td>{{ pricing.school }}</td>
                <td>
                    <a href="{{ path('pricing_show', {'id': pricing.id}) }}">show</a>
                    <a href="{{ path('pricing_edit', {'id': pricing.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


    <button class="btn btn-outline-dark mb-3 ml-3"> <a href="{{ path('pricing_new') }}">Create new</a></button>
    <button class="btn btn-outline-dark mb-3 ml-3"><a href="{{ path('admin') }}">back</a></button>
{% endblock %}
